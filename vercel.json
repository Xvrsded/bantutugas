{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "api/*.php",
      "use": "vercel-php@0.9.0"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/__diag",
      "dest": "/api/diag.php"
    },
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
